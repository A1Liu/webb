{
  "compilerOptions": {
    // NOTE: These options do some pretty silly stuff, so maybe get rid
    // of them eventually.
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
}
